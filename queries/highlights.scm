; main operators: =, ,, ., ;
(main_operator) @keyword

; stream operators: |>, ->, :>, !>, <!, <:, <-, <|, >, <
(stream_operator) @keyword.conditional

; other operators
(other_operator) @operator

; numbers
(number) @number

; strings
(string) @string

; identifiers
(identifier) @variable

; brackets
"(" @punctuation.bracket
")" @punctuation.bracket
"{" @punctuation.special
"}" @punctuation.special
